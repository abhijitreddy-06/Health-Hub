<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Consultation | TeleHealth</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            background: #0f172a;
            color: #f1f5f9;
            font-family: Poppins;
            overflow: hidden
        }

        header {
            height: 70px;
            background: #020617;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem
        }

        .video-container {
            position: relative;
            height: calc(100vh - 70px);
            background: black
        }

        #remoteVideo {
            width: 100%;
            height: 100%;
            object-fit: contain
        }

        #localVideo {
            position: absolute;
            bottom: 120px;
            right: 20px;
            width: 240px;
            height: 180px;
            border: 3px solid #38bdf8;
            border-radius: 12px
        }

        .controls {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 100px;
            background: #020617;
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            align-items: center
        }

        .control-btn {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: #1e293b;
            color: white;
            border: none;
            font-size: 1.2rem;
            cursor: pointer
        }

        .overlay {
            position: absolute;
            inset: 0;
            background: #020617;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 10
        }
    </style>
</head>

<body>
    <header>
        <div><i class="fas fa-heartbeat"></i> TeleHealth</div>
        <div id="timer">00:00:00</div>
    </header>

    <main class="video-container">
        <div class="overlay" id="loading">
            <h2>Connecting to Doctorâ€¦</h2>
            <p>Please allow camera & microphone</p>
        </div>

        <video id="remoteVideo" autoplay playsinline></video>
        <video id="localVideo" autoplay muted playsinline></video>

        <div class="controls">
            <button class="control-btn" id="micBtn"><i class="fas fa-microphone"></i></button>
            <button class="control-btn" id="camBtn"><i class="fas fa-video"></i></button>
        </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const ROOM_ID = "<%= roomId %>";
        let pc, localStream, mic = true, cam = true;
        const start = Date.now();
    console.log("ROOM_ID =", ROOM_ID);

        setInterval(() => {
            const t = Date.now() - start;
            timer.innerText = `${String(t / 3600000 | 0).padStart(2, '0')}:${String(t / 60000 % 60 | 0).padStart(2, '0')}:${String(t / 1000 % 60 | 0).padStart(2, '0')}`;
        }, 1000);

        async function init() {
            localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            localVideo.srcObject = localStream;
            socket.emit("join-room", { roomId: ROOM_ID, role: "user" });
        }
        init();

        function createPeer() {
            pc = new RTCPeerConnection({ iceServers: [{ urls: "stun:stun.l.google.com:19302" }] });
            localStream.getTracks().forEach(t => pc.addTrack(t, localStream));
            pc.ontrack = e => { remoteVideo.srcObject = e.streams[0]; loading.style.display = "none"; }
            pc.onicecandidate = e => e.candidate && socket.emit("signal", { roomId: ROOM_ID, payload: { candidate: e.candidate } });
        }

        socket.on("signal", async p => {
            if (!pc) createPeer();
            if (p.offer) {
                await pc.setRemoteDescription(p.offer);
                const ans = await pc.createAnswer();
                await pc.setLocalDescription(ans);
                socket.emit("signal", { roomId: ROOM_ID, payload: { answer: ans } });
            }
            if (p.candidate) await pc.addIceCandidate(p.candidate);
        });

        micBtn.onclick = () => {
            mic = !mic; localStream.getAudioTracks()[0].enabled = mic;
            micBtn.innerHTML = mic ? '<i class="fas fa-microphone"></i>' : '<i class="fas fa-microphone-slash"></i>'
        };

        camBtn.onclick = () => {
            cam = !cam; localStream.getVideoTracks()[0].enabled = cam;
            camBtn.innerHTML = cam ? '<i class="fas fa-video"></i>' : '<i class="fas fa-video-slash"></i>'
        };
    socket.on("call-ended", () => {

        const a = document.createElement("a");
        a.href = `/api/prescription/${ROOM_ID}`;
        a.download = "prescription.pdf";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);

        alert("Prescription downloaded");
        location.href = "/user_video_dashboard";
    });







    </script>
</body>

</html>