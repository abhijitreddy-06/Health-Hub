    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const ROOM_ID = "<%= roomId %>";

        let pc, localStream;
        let micOn = true, camOn = true;
        let callStartTime = Date.now();
        let timerInterval;

        // DOM Elements
        const chatPanel = document.getElementById("chatPanel");
        const chatToggle = document.getElementById("chatToggle");
        const closeChat = document.getElementById("closeChat");
        const noVideoOverlay = document.getElementById("noVideoOverlay");
        const callTimer = document.getElementById("callTimer");

        // Initialize timer
        function startTimer() {
            timerInterval = setInterval(() => {
                const elapsed = Date.now() - callStartTime;
                const hours = Math.floor(elapsed / 3600000);
                const minutes = Math.floor((elapsed % 3600000) / 60000);
                const seconds = Math.floor((elapsed % 60000) / 1000);

                callTimer.textContent =
                    `${hours.toString().padStart(2, '0')}:` +
                    `${minutes.toString().padStart(2, '0')}:` +
                    `${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        // Toggle chat panel
        chatToggle.onclick = () => {
            chatPanel.classList.toggle("open");
            chatToggle.classList.toggle("active");
        };

        closeChat.onclick = () => {
            chatPanel.classList.remove("open");
            chatToggle.classList.remove("active");
        };

        // Help button
        document.getElementById("helpBtn").onclick = () => {
            alert("For technical assistance:\n\n• Ensure your camera and microphone are enabled\n• Check your internet connection\n• Refresh the page if connection is lost\n• Contact support if issues persist");
        };

        // Initialize video call
        async function init() {
            try {
                localStream = await navigator.mediaDevices.getUserMedia({
                    video: true,
                    audio: true
                });

                localVideo.srcObject = localStream;
                socket.emit("join-room", ROOM_ID);

                // Hide no video overlay
                noVideoOverlay.style.display = 'none';

                // Start timer
                startTimer();
            } catch (error) {
                console.error("Error accessing media devices:", error);
                alert("Unable to access camera or microphone. Please check permissions and try again.");
            }
        }

        // Create peer connection
        function createPeer() {
            const config = {
                iceServers: [{ urls: "stun:stun.l.google.com:19302" }]
            };

            pc = new RTCPeerConnection(config);

            localStream.getTracks().forEach(track => pc.addTrack(track, localStream));

            pc.ontrack = e => {
                remoteVideo.srcObject = e.streams[0];
                noVideoOverlay.style.display = 'none';
            };

            pc.onicecandidate = e => {
                if (e.candidate) {
                    socket.emit("signal", {
                        roomId: ROOM_ID,
                        payload: { candidate: e.candidate }
                    });
                }
            };
        }

        // User joined event (doctor joins)
        socket.on("user-joined", async () => {
            createPeer();
            const offer = await pc.createOffer();
            await pc.setLocalDescription(offer);

            socket.emit("signal", {
                roomId: ROOM_ID,
                payload: { offer }
            });
        });

        // Toggle microphone
        document.getElementById("toggleMic").onclick = () => {
            if (!localStream) return;

            localStream.getAudioTracks().forEach(track => {
                track.enabled = !track.enabled;
                micOn = track.enabled;
            });

            const micBtn = document.getElementById("toggleMic");
            const micLabel = document.getElementById("micLabel");

            if (micOn) {
                micBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                micBtn.classList.remove("active");
                micLabel.textContent = "Mute";
            } else {
                micBtn.innerHTML = '<i class="fas fa-microphone-slash"></i>';
                micBtn.classList.add("active");
                micLabel.textContent = "Unmute";
            }
        };

        // Toggle camera
        document.getElementById("toggleCam").onclick = () => {
            if (!localStream) return;

            localStream.getVideoTracks().forEach(track => {
                track.enabled = !track.enabled;
                camOn = track.enabled;
            });

            const camBtn = document.getElementById("toggleCam");
            const camLabel = document.getElementById("camLabel");

            if (camOn) {
                camBtn.innerHTML = '<i class="fas fa-video"></i>';
                camBtn.classList.remove("active");
                camLabel.textContent = "Stop Video";
            } else {
                camBtn.innerHTML = '<i class="fas fa-video-slash"></i>';
                camBtn.classList.add("active");
                camLabel.textContent = "Start Video";
            }
        };

        // Handle signaling
        socket.on("signal", async payload => {
            if (!pc) createPeer();

            if (payload.offer) {
                await pc.setRemoteDescription(payload.offer);
                const ans = await pc.createAnswer();
                await pc.setLocalDescription(ans);

                socket.emit("signal", {
                    roomId: ROOM_ID,
                    payload: { answer: ans }
                });
            }

            if (payload.answer) {
                await pc.setRemoteDescription(payload.answer);
            }

            if (payload.candidate) {
                await pc.addIceCandidate(payload.candidate);
            }
        });

        // Chat functionality
        function sendMessage() {
            const input = document.getElementById("chatInput");
            if (!input.value.trim()) return;

            const message = input.value;
            const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            // Add to chat UI
            addMessageToUI(message, "You", time, "sent");

            // Send via socket
            socket.emit("chat-message", {
                roomId: ROOM_ID,
                message: message,
                sender: "User",
                time: time
            });

            input.value = "";
            input.focus();
        }

        function addMessageToUI(message, sender, time, type) {
            const chatMessages = document.getElementById("chatMessages");
            const messageDiv = document.createElement("div");
            messageDiv.className = `message ${type}`;
            messageDiv.innerHTML = `
                <div>${message}</div>
                <span class="message-time">${sender} • ${time}</span>
            `;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Receive chat messages
        socket.on("chat-message", data => {
            addMessageToUI(data.message, data.sender, data.time, "received");
        });

        // Handle call ended by doctor
        socket.on("call-ended", () => {
            clearInterval(timerInterval);
            alert("The consultation has ended. Thank you for using TeleHealth.");
            window.location.href = "/user_video_dashboard";
        });

        // Handle connection errors
        socket.on("connect_error", (error) => {
            console.error("Connection error:", error);
            alert("Connection error. Please check your internet connection.");
        });

        // Cleanup function
        function cleanup() {
            if (pc) {
                pc.close();
                pc = null;
            }

            if (localStream) {
                localStream.getTracks().forEach(track => track.stop());
                localStream = null;
            }

            const localVideo = document.getElementById("localVideo");
            const remoteVideo = document.getElementById("remoteVideo");

            if (localVideo) localVideo.srcObject = null;
            if (remoteVideo) remoteVideo.srcObject = null;

            if (timerInterval) {
                clearInterval(timerInterval);
            }
        }

        // Initialize
        window.addEventListener('DOMContentLoaded', init);
    </script>
