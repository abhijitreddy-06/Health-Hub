    <!-- Header -->
    <header class="video-header">
        <div class="video-header-left">
            <a href="/user_home" class="video-header-logo">
                <i class="fas fa-heartbeat"></i>
                <span>TeleHealth</span>
            </a>
            <div class="video-header-info">
                <h2>Video Consultation</h2>
                <p>Live with Doctor</p>
            </div>
        </div>
        <div class="video-header-right">
            <div class="call-timer" id="callTimer">00:00:00</div>
        </div>
    </header>

    <!-- Main Video Container -->
    <main class="video-container">
        <!-- No Video Overlay (shown initially) -->
        <div class="no-video-overlay" id="noVideoOverlay">
            <div class="no-video-icon">
                <i class="fas fa-video"></i>
            </div>
            <h2>Connecting to Doctor...</h2>
            <p>Please wait while we connect you with your healthcare provider. Make sure your camera and microphone are
                enabled.</p>
        </div>

        <!-- Remote Video (Doctor) -->
        <video id="remoteVideo" autoplay playsinline></video>

        <!-- Local Video (User) -->
        <video id="localVideo" autoplay muted playsinline></video>

        <!-- Call Info -->
        <div class="call-info-overlay">
            <h3>Virtual Consultation</h3>
            <p>Consultation ID: <span id="roomId">
                    <%= roomId %>
                </span></p>
        </div>

        <!-- Connection Status -->
        <div class="status-indicator">
            <div class="status-dot"></div>
            <span>Connected</span>
        </div>

        <!-- Controls Bar -->
        <div class="controls-bar">
            <div class="control-group">
                <button class="control-btn" id="toggleMic">
                    <i class="fas fa-microphone"></i>
                </button>
                <span class="control-label" id="micLabel">Mute</span>
            </div>

            <div class="control-group">
                <button class="control-btn" id="toggleCam">
                    <i class="fas fa-video"></i>
                </button>
                <span class="control-label" id="camLabel">Stop Video</span>
            </div>

            <div class="control-group">
                <button class="control-btn" id="chatToggle">
                    <i class="fas fa-comment"></i>
                </button>
                <span class="control-label">Chat</span>
            </div>

            <div class="control-group">
                <button class="control-btn" id="helpBtn">
                    <i class="fas fa-question-circle"></i>
                </button>
                <span class="control-label">Help</span>
            </div>
        </div>

        <!-- Chat Panel -->
        <div class="chat-panel" id="chatPanel">
            <div class="chat-header">
                <h3><i class="fas fa-comments"></i> Consultation Chat</h3>
                <button class="close-chat" id="closeChat">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="chat-messages" id="chatMessages">
                <div class="message received">
                    <div>System: Consultation has started. You can now chat with your doctor.</div>
                    <span class="message-time">Just now</span>
                </div>
            </div>
            <div class="chat-input-container">
                <input type="text" class="chat-input" id="chatInput" placeholder="Type your message..." />
                <button class="send-btn" onclick="sendMessage()">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </main>
    <footer class="simple-footer">
        <div class="footer-content">
            <div class="footer-left">
                <a href="/user_home" class="footer-logo">
                    <i class="fas fa-heartbeat"></i>
                    <span>TeleHealth</span>
                </a>
                <div class="copyright">
                    © 2025 TeleHealth. All rights reserved.
                </div>
            </div>
    
            <div class="footer-links">
                <a href="/privacy">Privacy Policy</a>
                <span class="separator">|</span>
                <a href="/terms">Terms of Service</a>
                <span class="separator">|</span>
                <a href="/contact">Contact</a>
            </div>
        </div>
