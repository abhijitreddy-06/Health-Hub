<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Doctor Consultation | TeleHealth</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            background: #0f172a;
            color: #f1f5f9;
            font-family: Poppins;
            overflow: hidden
        }

        .video-header {
            height: 70px;
            background: #020617;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem
        }

        .video-container {
            position: relative;
            height: calc(100vh - 70px)
        }

        #remoteVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: black
        }

        #localVideo {
            position: absolute;
            bottom: 120px;
            right: 20px;
            width: 240px;
            height: 180px;
            border: 3px solid #38bdf8;
            border-radius: 12px
        }

        .controls-bar {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 100px;
            background: #020617;
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            align-items: center
        }

        .control-btn {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: #1e293b;
            color: white;
            border: none;
            cursor: pointer
        }

        .end {
            background: #ef4444
        }

        .notes-box {
            position: absolute;
            top: 90px;
            right: 20px;
            width: 300px;
            height: 300px;
            background: #020617;
            border: 1px solid #334155;
            padding: 1rem
        }

        textarea {
            width: 100%;
            height: 100%;
            background: #0f172a;
            color: white;
            border: none;
            resize: none
        }
    </style>
</head>

<body>
    <header class="video-header">
        <div><i class="fas fa-user-md"></i> Doctor Consultation</div>
        <div id="callTimer">00:00:00</div>
    </header>

    <main class="video-container">
        <video id="remoteVideo" autoplay playsinline></video>
        <video id="localVideo" autoplay muted playsinline></video>

        <div class="notes-box">
            <h4>Doctor Notes</h4>
            <textarea id="notesText" placeholder="Write notes during consultation..."></textarea>
        </div>

        <div class="controls-bar">
            <button class="control-btn" id="toggleMic"><i class="fas fa-microphone"></i></button>
            <button class="control-btn" id="toggleCam"><i class="fas fa-video"></i></button>
            <button class="control-btn end" id="endCall"><i class="fas fa-phone-slash"></i></button>
        </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const ROOM_ID = "<%= roomId %>";
        const APPOINTMENT_ID = "<%= appointment.id %>";

        let pc, localStream, mic = true, cam = true;
        const start = Date.now();

        setInterval(() => {
            const t = Date.now() - start;
            callTimer.innerText =
                `${String(t / 3600000 | 0).padStart(2, '0')}:${String(t / 60000 % 60 | 0).padStart(2, '0')}:${String(t / 1000 % 60 | 0).padStart(2, '0')}`;
        }, 1000);

        async function init() {
            localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            localVideo.srcObject = localStream;
            socket.emit("join-room", { roomId: ROOM_ID, role: "doctor" });
        }
        init();

        function createPeer() {
            pc = new RTCPeerConnection({ iceServers: [{ urls: "stun:stun.l.google.com:19302" }] });
            localStream.getTracks().forEach(t => pc.addTrack(t, localStream));
            pc.ontrack = e => remoteVideo.srcObject = e.streams[0];
            pc.onicecandidate = e => e.candidate && socket.emit("signal", { roomId: ROOM_ID, payload: { candidate: e.candidate } });
        }

        socket.on("user-ready", async () => {
            createPeer();
            const offer = await pc.createOffer();
            await pc.setLocalDescription(offer);
            socket.emit("signal", { roomId: ROOM_ID, payload: { offer } });
        });

        socket.on("signal", async p => {
            if (!pc) createPeer();
            if (p.answer) await pc.setRemoteDescription(p.answer);
            if (p.candidate) await pc.addIceCandidate(p.candidate);
        });

        toggleMic.onclick = () => {
            mic = !mic;
            localStream.getAudioTracks()[0].enabled = mic;
            toggleMic.innerHTML = mic ? '<i class="fas fa-microphone"></i>' : '<i class="fas fa-microphone-slash"></i>';
        };

        toggleCam.onclick = () => {
            cam = !cam;
            localStream.getVideoTracks()[0].enabled = cam;
            toggleCam.innerHTML = cam ? '<i class="fas fa-video"></i>' : '<i class="fas fa-video-slash"></i>';
        };

    endCall.onclick = async () => {

        await fetch("/api/notes/save", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                roomId: ROOM_ID,
                notes: notesText.value
            })
        });

        await fetch(`/appointments/${APPOINTMENT_ID}/complete`, {
            method: "POST"
        });

        socket.emit("call-ended", { roomId: ROOM_ID });
        location.href = "/doc_video_dashboard";
    };



    </script>
</body>

</html>